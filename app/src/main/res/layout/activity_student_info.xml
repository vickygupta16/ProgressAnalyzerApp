<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studentinfotitle"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="My Information"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/studentimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fullnametv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/fullnamevalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mobiletv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/mobilevalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/gendertv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/gendervalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/agetv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/agevalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/batchtv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Batch"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/batchvalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/emailtv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email-ID"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/emailvalue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/passwordtv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/passwordvalue"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sem1button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/colorGreen"
                android:text="Semester 1"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sem2button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGreen"
                android:text="Semester 2"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sem3button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/colorGreen"
                android:text="Semester 3"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sem4button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGreen"
                android:text="Semester 4"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sem5button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:text="Semester 5"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateactivity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorBlue"
                android:text="Update Profile"
                android:textColor="@color/colorOrange"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delactivity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorRed"
                android:text="Delete Sem Record"
                android:textColor="@color/colorGreen"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewprogressbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:text="My Progress"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resultbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlue"
                android:background="@color/colorGreen"
                android:textStyle="bold"
                android:text="Result"/>
        </LinearLayout>

        <Button
            android:id="@+id/usignout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/colorBlue"
            android:text="Sign Out"
            android:layout_marginBottom="30dp"
            android:textColor="@color/colorGreen"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>